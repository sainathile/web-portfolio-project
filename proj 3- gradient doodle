            height: 100vh;
            background: linear-gradient(135deg, #ff9a9e, #fad0c4);
        }

        h1 {
            font-size: 2rem;
            color: white;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        canvas {
            background: white;
            border: 3px solid #ff9a9e;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
            cursor: crosshair;
        }

        .controls {
            margin-top: 10px;
            display: flex;
            gap: 10px;
        }

        button {
            background: #ff758c;
            color: white;
            border: none;
            padding: 10px 15px;
            font-size: 1rem;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background: #ff6b81;
        }

        input[type="range"] {
            cursor: pointer;
